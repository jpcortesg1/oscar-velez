---
import data from "./../../config/services.json";

const { items } = data;
---

<section class="services py-5" id="services">
  <div class="container m-auto">
    <h1 class="text-2xl text-center mb-5">Servicios</h1>
    <div class="flex flex-wrap justify-around gap-y-5">
      {
        items.map((item) => (
          <div class="w-1/2 md:w-1/3">
            <div class="card flex flex-col justify-center items-center gap-5">
              <div class="card-header">
                <h3 class="text-xl"> {item.name} </h3>
              </div>
              <div class="card-img">
                <img
                  src={item.img}
                  alt=""
                  class="object-cover h-52 w-52 rounded-[50%]"
                />
              </div>
              {item.description && (
                <div class="card-body">
                  <p class="text-center"> {item.description} </p>
                </div>
              )}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
